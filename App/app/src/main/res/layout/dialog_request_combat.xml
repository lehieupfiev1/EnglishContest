<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_default_padding"
    android:background="@drawable/dialog_background_basic_rounded_corner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >

        <com.pfiev.englishcontest.ui.wiget.RoundedAvatarImageView
            android:id="@+id/dialog_request_combat_avatar"
            android:layout_width="@dimen/dialog_request_combat_avatar_width"
            android:layout_height="@dimen/dialog_request_combat_avatar_width"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_profile_image"
            app:shadowEnabled="true" />

        <TextView
            android:id="@+id/dialog_request_combat_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dialog_request_combat_name_margin"
            android:textColor="@color/dialog_request_combat_user_name"
            android:text="Username here"
            android:fontFamily="@font/mali_bold"
            android:textSize="@dimen/dialog_request_combat_name_text_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/dialog_request_combat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_request_combat_message_margin_bottom"
            android:gravity="center_horizontal"
            android:text="@string/dialog_request_combat_message"
            android:textColor="@color/dialog_default_intro_text"
            android:fontFamily="@font/mali_bold"
            android:textSize="@dimen/dialog_request_combat_message_text_size"
            />
        <TextView
            android:id="@+id/dialog_request_combat_time_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/dialog_request_combat_time_remaining"
            android:fontFamily="@font/mali_bold"
            android:textSize="@dimen/dialog_request_combat_time_remaining_text_size"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/dialog_request_combat_bg"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/dialog_request_combat_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dialog_request_combat_btn_min_width"
            android:paddingVertical="@dimen/dialog_request_combat_btn_pd_vertical"
            android:paddingHorizontal="@dimen/dialog_request_combat_btn_pd_horizontal"
            android:layout_marginEnd="@dimen/dialog_request_combat_btn_margin_right"
            android:background="@drawable/bg_experimental_main_button"
            android:backgroundTint="@color/dialog_request_combat_btn_accept_background"
            android:clickable="true"
            android:fontFamily="@font/mali_bold"
            android:text="@string/dialog_request_combat_btn_accept"
            android:textColor="@color/dialog_request_combat_btn_text"
            android:textSize="@dimen/dialog_request_combat_btn_text_size"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dialog_request_combat_reject_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dialog_request_combat_btn_min_width"
            android:paddingVertical="@dimen/dialog_request_combat_btn_pd_vertical"
            android:paddingHorizontal="@dimen/dialog_request_combat_btn_pd_horizontal"
            android:background="@drawable/bg_experimental_main_button"
            android:backgroundTint="@color/dialog_request_combat_btn_reject_background"
            android:clickable="true"
            android:text="@string/dialog_request_combat_btn_reject"
            android:textSize="@dimen/dialog_request_combat_btn_text_size"
            android:textColor="@color/dialog_request_combat_btn_text"
            android:fontFamily="@font/mali_bold"
            android:textAlignment="center"
            />
    </LinearLayout>

</LinearLayout>