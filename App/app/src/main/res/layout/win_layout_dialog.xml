<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_winner_loser_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_menu_bubble_main_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_winner_loser_big_title_margin_top"
        android:text="@string/dialog_winner_big_title"
        android:textColor="@color/dialog_winner_big_title"
        android:textSize="@dimen/dialog_winner_loser_big_title_text"
        android:fontFamily="@font/mali_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fight_image"
        android:layout_width="@dimen/dialog_winner_loser_mid_img_size"
        android:layout_height="@dimen/dialog_winner_loser_mid_img_size"
        android:layout_marginTop="@dimen/dialog_winner_loser_mid_img_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/winner_image" />

    <TextView
        android:id="@+id/fight_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_winner_loser_sub_title_margin_top"
        android:text="@string/dialog_winner_small_title"
        android:textColor="@color/dialog_winner_small_title"
        android:textSize="@dimen/dialog_winner_loser_sub_title_text"
        android:fontFamily="@font/mali_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fight_image" />

    <TextView
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dialog_winner_loser_btn_min_width"
        android:paddingHorizontal="@dimen/dialog_winner_loser_btn_padding_horizontal"
        android:layout_marginVertical="@dimen/dialog_winner_loser_btn_margin_vertical"
        android:layout_marginEnd="@dimen/dialog_winner_loser_btn_margin_end_start"
        android:background="@drawable/bg_experimental_main_button"
        android:text="@string/dialog_winner_btn_ok"
        android:textSize="@dimen/dialog_winner_loser_btn_text"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/mali_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fight_subtext"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/show_result_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dialog_winner_loser_btn_min_width"
        android:paddingHorizontal="@dimen/dialog_winner_loser_btn_padding_horizontal"
        android:layout_marginVertical="@dimen/dialog_winner_loser_btn_margin_vertical"
        android:layout_marginStart="@dimen/dialog_winner_loser_btn_margin_end_start"
        android:background="@drawable/bg_experimental_main_button"
        android:text="@string/dialog_winner_btn_detail"
        android:textSize="@dimen/dialog_winner_loser_btn_text"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/mali_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fight_subtext"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>