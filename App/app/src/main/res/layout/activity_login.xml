<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.pfiev.englishcontest.model.UserItem" />
    </data>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sign_in_up_background_color"
        android:orientation="vertical"
        android:paddingStart="@dimen/sign_in_up_layout_padding_start"
        android:paddingEnd="@dimen/sign_in_up_layout_padding_end">

        <!--        <ProgressBar-->
        <!--            android:id="@+id/progressBar"-->
        <!--            style="?android:attr/progressBarStyleHorizontal"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:indeterminate="true"-->
        <!--            android:visibility="invisible" />-->


        <TextView
            android:id="@+id/sign_in_big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sign_in_up_big_title_margin_top"
            android:fontFamily="@font/mali_bold"
            android:gravity="center_horizontal"
            android:text="@string/app_name_big_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sign_in_up_big_title_text_size"
            android:textStyle="bold" />


        <!--            <ImageView-->
        <!--                android:id="@+id/imageView"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="305dp"-->
        <!--                android:layout_marginTop="20dp"-->
        <!--                android:src="@drawable/login_icon_english_contest" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_in_up_group_button_margin_top"
            android:orientation="vertical">

            <!-- Google account -->
            <LinearLayout
                android:id="@+id/sign_in_google_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sign_in_up_button_margin_top"
                android:background="@drawable/sign_in_up_button_background"
                android:gravity="center_vertical"
                android:minHeight="@dimen/sign_in_up_button_height"
                android:paddingStart="@dimen/sign_in_up_button_padding_start"
                android:paddingTop="@dimen/sign_in_up_button_padding_top_bottom"
                android:paddingEnd="@dimen/sign_in_up_button_padding_end"
                android:paddingBottom="@dimen/sign_in_up_button_padding_top_bottom">

                <ImageView
                    android:layout_width="@dimen/dialog_sign_in_up_icon_size"
                    android:layout_height="@dimen/dialog_sign_in_up_icon_size"
                    android:src="@drawable/google_icon" />

                <TextView
                    android:id="@+id/sign_in_google_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sign_in_up_button_text_margin_start"
                    android:fontFamily="@font/mali_regular"
                    android:text="@string/sign_in_with_google"
                    android:textColor="@color/sign_in_up_button_text_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Twitter -->
            <LinearLayout
                android:id="@+id/sign_in_twitter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sign_in_up_button_margin_top"
                android:background="@drawable/sign_in_up_button_background"
                android:gravity="center_vertical"
                android:minHeight="@dimen/sign_in_up_button_height"
                android:paddingStart="@dimen/sign_in_up_button_padding_start"
                android:paddingTop="@dimen/sign_in_up_button_padding_top_bottom"
                android:paddingEnd="@dimen/sign_in_up_button_padding_end"
                android:paddingBottom="@dimen/sign_in_up_button_padding_top_bottom">

                <ImageView
                    android:layout_width="@dimen/dialog_sign_in_up_icon_size"
                    android:layout_height="@dimen/dialog_sign_in_up_icon_size"
                    android:src="@drawable/ic_twitter" />

                <TextView
                    android:id="@+id/sign_in_twitter_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sign_in_up_button_text_margin_start"
                    android:fontFamily="@font/mali_regular"
                    android:text="@string/sign_in_with_twitter"
                    android:textColor="@color/sign_in_up_button_text_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Facebook account -->
            <LinearLayout
                android:id="@+id/sign_in_facebook_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sign_in_up_button_margin_top"
                android:background="@drawable/sign_in_up_button_background"
                android:gravity="center_vertical"
                android:minHeight="@dimen/sign_in_up_button_height"
                android:paddingStart="@dimen/sign_in_up_button_padding_start"
                android:paddingTop="@dimen/sign_in_up_button_padding_top_bottom"
                android:paddingEnd="@dimen/sign_in_up_button_padding_end"
                android:paddingBottom="@dimen/sign_in_up_button_padding_top_bottom">

                <ImageView
                    android:layout_width="@dimen/dialog_sign_in_up_icon_size"
                    android:layout_height="@dimen/dialog_sign_in_up_icon_size"
                    android:src="@drawable/ic_facebook" />

                <TextView
                    android:id="@+id/sign_in_facebook_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sign_in_up_button_text_margin_start"
                    android:fontFamily="@font/mali_regular"
                    android:text="@string/sign_in_with_facebook"
                    android:textColor="@color/sign_in_up_button_text_color"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                style="?android:attr/progressBarStyleHorizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sign_in_up_intro_title_margin_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_white_heart">

                </ImageView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sign_in_into_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/mali_semi_bold"
                        android:gravity="center_horizontal"
                        android:text="@string/app_name_intro_title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sign_in_up_intro_title_text_size">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>