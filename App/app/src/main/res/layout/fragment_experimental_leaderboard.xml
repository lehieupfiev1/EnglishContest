<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_experimental_leaderboard"
    tools:context=".ui.experimental.LeaderboardFragment">

    <ImageButton
        android:id="@+id/experimental_leaderboard_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_experimental_return_back"
        android:contentDescription="Back to main"
        >
    </ImageButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/experimental_leaderboard_top_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/experimental_leaderboard_top_img">

        </ImageView>

        <ListView
            android:id="@+id/experimental_leaderboard_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/experimental_leaderboard_top_img">

        </ListView>
    </RelativeLayout>

</FrameLayout>