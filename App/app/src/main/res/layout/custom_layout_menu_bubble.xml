<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <com.pfiev.englishcontest.ui.wiget.RoundedAvatarImageView
        android:id="@+id/menu_bubble_sys_avatar"
        android:layout_width="@dimen/menu_bubble_sys_name_avatar_width"
        android:layout_height="@dimen/menu_bubble_sys_name_avatar_height"
        android:layout_marginHorizontal="@dimen/menu_bubble_sys_name_avatar_mg_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_bubble_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/menu_bubble_table_margin_start"
        android:background="@drawable/bg_menu_bubble_main_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/menu_bubble_table_padding_vertical"
        android:paddingBottom="@dimen/menu_bubble_table_padding_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/menu_bubble_sys_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_bubble_sys_name_avatar_padding_bottom"
            android:fontFamily="@font/mali_bold"
            android:textColor="@color/menu_bubble_sys_name"
            android:textSize="@dimen/menu_bubble_sys_name_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>