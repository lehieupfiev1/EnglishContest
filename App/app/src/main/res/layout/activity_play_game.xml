<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".PlayGameActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <RelativeLayout
            android:id="@+id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:progressDrawable="@drawable/custom_progress_bg"
                android:max="20"
                android:progress="1" />

            <TextView
                android:id="@+id/progress_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10/20"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:background="@drawable/edittext_back_ground"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/questionTv"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:textSize="16sp"
                android:textColor="@color/black_overlay"
                android:gravity="center"
                android:text="" />
        </FrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/count_down_display"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:layout_marginBottom="70dp"
            android:visibility="visible"
            android:scaleX="2"
            android:scaleY="2"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/countdown">

        </com.airbnb.lottie.LottieAnimationView>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginStart="50dp"
            android:visibility="invisible"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chooser_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:backgroundTint="@color/white"
                android:textColor="@color/light_blue_600"
                android:text="A"
                app:cornerRadius="@dimen/button_corner_radius" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chooser_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:backgroundTint="@color/green"
                android:text="B"
                app:cornerRadius="@dimen/button_corner_radius" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chooser_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:backgroundTint="@color/purple_200"
                android:text="C"
                app:cornerRadius="@dimen/button_corner_radius" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chooser_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:backgroundTint="@color/light_blue_600"
                android:text="D"
                app:cornerRadius="@dimen/button_corner_radius" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/funny_icon"
                android:layout_width="@dimen/play_sticker_icon_width"
                android:layout_height="@dimen/play_sticker_icon_width"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/sticker_icon" />

            <com.pfiev.englishcontest.ui.wiget.WinsetPlayerDetailView
                android:id="@+id/player1"
                android:layout_width="@dimen/play_detail_result_width"
                android:layout_height="@dimen/play_avatar_user_size"
                android:layout_below="@+id/funny_icon"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp" />

            <com.pfiev.englishcontest.ui.wiget.WinsetPlayerDetailView
                android:id="@+id/player2"
                android:layout_width="@dimen/play_detail_result_width"
                android:layout_height="@dimen/play_avatar_user_size"
                android:layout_below="@+id/player1"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/time_count"
                android:layout_width="@dimen/play_count_time_width"
                android:layout_height="@dimen/play_count_time_width"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_night_back_ground"
                android:fontFamily="@font/svn_supercell_magic"
                android:text="10 s" />

        </RelativeLayout>

    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>