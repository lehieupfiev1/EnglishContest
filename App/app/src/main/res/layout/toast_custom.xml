<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/toast_custom_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/toast_custom_success_shape"
        android:padding="@dimen/toast_custom_layout_padding"
        >

        <ImageView
            android:layout_width="@dimen/toast_custom_ic_img_width"
            android:layout_height="@dimen/toast_custom_ic_img_height"
            android:id="@+id/toast_custom_icon"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_24" />

        <TextView
            android:id="@+id/toast_custom_text"
            android:hint="This a toast text"
            android:textColor="@color/toast_custom_text"
            android:layout_marginLeft="@dimen/toast_custom_text_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>