<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="user"
            type="com.pfiev.englishcontest.model.UserItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:textSize="30sp"
                android:text="Login Funny Game"
                tools:layout_editor_absoluteX="189dp"
                tools:layout_editor_absoluteY="160dp" />

            <!-- Facebook account -->


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/login_icon_english_contest" />

            <LinearLayout
                android:id="@+id/sign_in_facebook_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_up_button_background"
                android:gravity="center_vertical"
                android:minHeight="@dimen/sign_in_up_button_height"
                android:paddingStart="@dimen/sign_in_up_button_padding_start"
                android:paddingTop="@dimen/sign_in_up_button_padding_top_bottom"
                android:paddingEnd="@dimen/sign_in_up_button_padding_end"
                android:paddingBottom="@dimen/sign_in_up_button_padding_top_bottom">

                <ImageView
                    android:layout_width="@dimen/dialog_sign_in_up_icon_size"
                    android:layout_height="@dimen/dialog_sign_in_up_icon_size"
                    android:src="@drawable/facebook_icon" />

                <TextView
                    android:id="@+id/sign_in_facebook_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sign_in_up_button_text_margin_start"
                    android:text="@string/sign_in_with_facebook" />
            </LinearLayout>

            <!-- Google account -->
            <LinearLayout
                android:id="@+id/sign_in_google_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sign_in_up_button_margin_top"
                android:background="@drawable/sign_in_up_button_background"
                android:gravity="center_vertical"
                android:minHeight="@dimen/sign_in_up_button_height"
                android:paddingStart="@dimen/sign_in_up_button_padding_start"
                android:paddingTop="@dimen/sign_in_up_button_padding_top_bottom"
                android:paddingEnd="@dimen/sign_in_up_button_padding_end"
                android:paddingBottom="@dimen/sign_in_up_button_padding_top_bottom">

                <ImageView
                    android:layout_width="@dimen/dialog_sign_in_up_icon_size"
                    android:layout_height="@dimen/dialog_sign_in_up_icon_size"
                    android:src="@drawable/google_icon" />

                <TextView
                    android:id="@+id/sign_in_google_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sign_in_up_button_text_margin_start"
                    android:text="@string/sign_in_with_google" />
            </LinearLayout>

            <!-- Twitter -->
            <LinearLayout
                android:id="@+id/sign_in_twitter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sign_in_up_button_margin_top"
                android:background="@drawable/sign_in_up_button_background"
                android:gravity="center_vertical"
                android:minHeight="@dimen/sign_in_up_button_height"
                android:paddingStart="@dimen/sign_in_up_button_padding_start"
                android:paddingTop="@dimen/sign_in_up_button_padding_top_bottom"
                android:paddingEnd="@dimen/sign_in_up_button_padding_end"
                android:paddingBottom="@dimen/sign_in_up_button_padding_top_bottom">

                <ImageView
                    android:layout_width="@dimen/dialog_sign_in_up_icon_size"
                    android:layout_height="@dimen/dialog_sign_in_up_icon_size"
                    android:src="@drawable/tweet_icon" />

                <TextView
                    android:id="@+id/sign_in_twitter_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sign_in_up_button_text_margin_start"
                    android:text="@string/sign_in_with_twitter" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>