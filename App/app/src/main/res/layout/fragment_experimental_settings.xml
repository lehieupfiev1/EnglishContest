<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_experimental_settings"
    tools:context=".ui.experimental.SettingsFragment">
    <ImageButton
        android:id="@+id/experimental_settings_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_experimental_return_back"
        android:contentDescription="Back to main"
        >
    </ImageButton>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:textColor="@color/experimental_main_button_color"
            android:textSize="45sp"
            android:textAlignment="center"
            android:fontFamily="@font/svn_supercell_magic"
            >
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

<!--            <ImageView-->
<!--                android:id="@+id/experimental_settings_sound_effect"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:contentDescription="Settings Language Icon"-->
<!--                android:src="@drawable/ic_experimental_settings_sound">-->

<!--            </ImageView>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/svn_supercell_magic"
                android:text="@string/experimental_settings_title_sound_effect"
                android:textSize="18sp"
                tools:ignore="RelativeOverlap">

            </TextView>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/experimental_settings_sound_effect_checkbox"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                app:lottie_rawRes="@raw/experimental_settings_checkbox_lottie">

            </com.airbnb.lottie.LottieAnimationView>

            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:src="@drawable/ic_tank_icon"></ImageView>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

<!--            <ImageView-->
<!--                android:id="@+id/experimental_settings_sound_icon"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:contentDescription="Settings Language Icon"-->
<!--                android:src="@drawable/ic_experimental_settings_sound">-->

<!--            </ImageView>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/svn_supercell_magic"
                android:text="@string/experimental_settings_title_background_music"
                android:textSize="18sp"
                tools:ignore="RelativeOverlap">

            </TextView>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/experimental_settings_sound_checkbox"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                app:lottie_rawRes="@raw/experimental_settings_checkbox_lottie">

            </com.airbnb.lottie.LottieAnimationView>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>